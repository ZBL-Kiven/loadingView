<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:parentTag="android.widget.FrameLayout">

    <View
        android:id="@+id/blv_child_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:id="@+id/blv_cl_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <FrameLayout
            android:id="@+id/blv_fl_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/blv_tvHint"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/blv_tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#777"
            android:textSize="14sp"
            android:visibility="invisible"
            tools:text="loading"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/blv_tvRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/blv_tvHint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:visibility="invisible"
            tools:text="loading description"
            tools:visibility="visible" />

        <Button
            android:id="@+id/blv_btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/blv_tvRefresh"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="refresh"
            tools:visibility="visible" />

    </RelativeLayout>
</merge>