<resources>

    <declare-styleable name="BaseLoadingView">
        <attr name="backgroundFill" format="color|reference" />
        <attr name="backgroundUnderTheContent" format="color|reference" />
        <attr name="loadingRes" format="reference" />
        <attr name="noDataRes" format="reference" />
        <attr name="noNetworkRes" format="reference" />
        <attr name="hintColor" format="color|reference" />
        <attr name="refreshTextColor" format="color|reference" />
        <attr name="loadingText" format="string" />
        <attr name="noDataText" format="string" />
        <attr name="networkErrorText" format="string" />
        <attr name="refreshNetworkText" format="string" />
        <attr name="refreshNoDataText" format="string" />
        <attr name="shownMode" format="enum">
            <enum name="overlap" value="0" />
            <enum name="floating" value="1" />
            <enum name="fo" value="2" />
        </attr>
        <attr name="btnBackground" format="color|reference" />
        <attr name="btnTextColor" format="color|reference" />
        <attr name="btnText" format="string|reference" />

        <attr name="btnEnable" format="boolean" />
        <attr name="hintEnable" format="boolean" />
        <attr name="refreshEnable" format="boolean" />

        <attr name="btnTextSize" format="dimension" />
        <attr name="loadingTextSize" format="dimension" />
        <attr name="hintTextSize" format="dimension" />

        <attr name="drawerWidth" format="dimension" />
        <attr name="drawerHeight" format="dimension" />
        <attr name="modeDefault" format="enum">
            <enum name="LOADING" value="1" />
            <enum name="NO_DATA" value="2" />
            <enum name="NET_WORK_ERROR" value="3" />
        </attr>
    </declare-styleable>

    <style name="mProgress_circle">
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

</resources>
