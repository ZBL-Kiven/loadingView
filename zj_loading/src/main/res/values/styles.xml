<resources>

    <item name="blv_loading_stub" type="id" />
    <item name="blv_noData_stub" type="id" />
    <item name="blv_noNetWork_stub" type="id" />

    <declare-styleable name="ZLoadingView">
        <attr name="backgroundFill" format="color|reference" />
        <attr name="backgroundUnderTheContent" format="color|reference" />
        <attr name="contentPadding" format="dimension" />
        <attr name="contentPaddingStart" format="dimension" />
        <attr name="contentPaddingEnd" format="dimension" />
        <attr name="contentPaddingTop" format="dimension" />
        <attr name="contentPaddingBottom" format="dimension" />
        <attr name="hintColor" format="color|reference" />
        <attr name="refreshTextColor" format="color|reference" />
        <attr name="loadingText" format="string" />
        <attr name="noDataText" format="string" />
        <attr name="networkErrorText" format="string" />
        <attr name="refreshNetworkText" format="string" />
        <attr name="changeAnimDuration" format="integer" />
        <attr name="maxRefreshTextWidth" format="dimension" />
        <attr name="maxRefreshTextLines" format="integer" />
        <attr name="maxHintTextWidth" format="dimension" />
        <attr name="maxHintTextLines" format="integer" />
        <attr name="refreshNoDataText" format="string" />
        <attr name="shownMode" format="enum">
            <enum name="overlap" value="0" />
            <enum name="floating" value="1" />
            <enum name="fo" value="2" />
        </attr>
        <attr name="btnBackground" format="color|reference" />
        <attr name="btnTextColor" format="color|reference" />
        <attr name="btnText" format="string|reference" />
        <attr name="btnEnable" format="boolean" />
        <attr name="refreshEnable" format="boolean" />
        <attr name="btnTextSize" format="dimension" />
        <attr name="refreshTextSize" format="dimension" />
        <attr name="hintTextSize" format="dimension" />

        <attr name="loading_width" format="dimension|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_of_drawer" value="-1" />
        </attr>
        <attr name="loading_height" format="dimension|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_of_drawer" value="-1" />
        </attr>
        <attr name="no_data_width" format="dimension|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_of_drawer" value="-1" />
        </attr>
        <attr name="no_data_height" format="dimension|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_of_drawer" value="-1" />
        </attr>
        <attr name="network_error_width" format="dimension|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_of_drawer" value="-1" />
        </attr>
        <attr name="network_error_height" format="dimension|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_of_drawer" value="-1" />
        </attr>

        <attr name="drawerWidth" format="dimension" />
        <attr name="drawerHeight" format="dimension" />
        <attr name="modeDefault" format="enum">
            <enum name="LOADING" value="1" />
            <enum name="NO_DATA" value="2" />
            <enum name="NET_WORK_ERROR" value="3" />
        </attr>
    </declare-styleable>

    <style name="mProgress_circle">
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <declare-styleable name="ZProgressLoadingView">
        <attr name="progress_layout" format="reference" />
        <attr name="progress_noDataRes" format="reference" />
        <attr name="progress_noNetworkRes" format="reference" />
    </declare-styleable>

    <declare-styleable name="ZRotateLoadingView">
        <attr name="rotate_loadingRes" format="reference" />
        <attr name="rotate_Duration" format="integer" />
        <attr name="rotate_noDataRes" format="reference" />
        <attr name="rotate_noNetworkRes" format="reference" />
    </declare-styleable>
</resources>
