<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/blv_child_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/loading_corner_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ProgressBar
                android:id="@+id/blv_pb"
                style="@style/mProgress_circle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:indeterminateDuration="1200" />

            <View
                android:id="@+id/blv_vNoData"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:background="@mipmap/base_nodata"
                android:visibility="gone" />

            <View
                android:id="@+id/blv_vNoNetwork"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:background="@mipmap/base_nonetwork"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/blv_tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:text="加载中，请稍候..."
            android:textColor="#fff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/blv_tvRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="轻触屏幕以刷新"
            android:textColor="#e6e6e6"
            android:textSize="12dp"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>